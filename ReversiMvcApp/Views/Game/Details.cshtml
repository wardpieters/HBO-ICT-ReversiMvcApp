@model ReversiMvcApp.Models.Game

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Player1Token)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Player1Token)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Player2Token)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Player2Token)
        </dd>
    </dl>
</div>
<div>
    <form asp-action="LeaveGame" method="post">
        <input name="token" type="hidden" value="@Model.Token"/>
        <input type="submit" value="Leave"/>
    </form>
</div>
