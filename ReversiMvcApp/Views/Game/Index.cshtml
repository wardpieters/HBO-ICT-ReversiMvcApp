@model IEnumerable<ReversiMvcApp.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player1Token)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Player2Token)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Player1Token)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Player2Token)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Token">Join</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
