@model IEnumerable<ReversiMvcApp.Models.Game>

@{
    ViewData["Title"] = "Games";
}

<h1>Speloverzicht</h1>
<p>Deze spellen wachten op een andere speler, join nu om samen met iemand te spelen!</p>

@if (ViewBag.ErrorMessage != null)
{
    <div>
        <h4>Game</h4>
        <hr />
        <div class="alert alert-danger">
                <p class="mb-0">Er is een fout opgetreden: @ViewBag.ErrorMessage.message</p>
            </div>
    </div>
    
    return;
}

@if (ViewBag.AlertMessage != null)
{
    <div>
        <div class="alert alert-@(ViewBag.AlertMessage.type ?? "danger")">
            <p class="mb-0">@ViewBag.AlertMessage.message</p>
        </div>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Naam</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="text-lg-right">
                        <a asp-action="Details" asp-route-id="@item.Token" class="btn btn-success">Join</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-info">Spel aanmaken</a>
